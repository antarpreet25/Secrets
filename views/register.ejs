<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head") %>
</head>
<body>
  <div class="container">
    <h2>Create an account</h2>
    <% if (error) { %><p class="msg error"><%= error %></p><% } %>
    <form action="/register" method="POST" class="card">
      <input name="name" type="text" placeholder="Full Name" required />
      <input name="email" type="email" placeholder="Email" required />
      <input name="password" id="password" type="password" placeholder="Password" required />
      <p class="hint">Password must include lowercase, uppercase, a number, and be at least 6 characters.</p>
      <label class="showpw"><input type="checkbox" onclick="togglePassword()"> Show Password</label>
      <button type="submit" class="btn">Register</button>
    </form>
    <p class="muted">Already have an account? <a href="/login">Login</a></p>
  </div>

  <script>
    function togglePassword() {
      const pw = document.getElementById('password');
      pw.type = pw.type === 'password' ? 'text' : 'password';
    }
  </script>
</body>
</html>
